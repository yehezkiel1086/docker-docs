FROM golang:1.16

WORKDIR /myenv
EXPOSE 8080

COPY . .

RUN go build
RUN go test ./...

ENV PORT=8080
ENV REQUEST_ORIGIN=http://127.0.0.1:5000
ENV REDIS_HOST=http://127.0.0.1:6379
ENV POSTGRES_HOST=http://127.0.0.1:5432
ENV POSTGRES_USER=postgres
ENV POSTGRES_PASSWORD=postgres
ENV POSTGRES_DATABASE=postgres

CMD ["./server"]
